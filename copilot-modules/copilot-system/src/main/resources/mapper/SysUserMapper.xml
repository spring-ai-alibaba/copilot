<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alibaba.cloud.ai.copilot.system.mapper.SysUserMapper">

    <!-- 多结构嵌套自动映射需带上每个实体的主键id 否则映射会失败 -->
    <resultMap type="com.alibaba.cloud.ai.copilot.system.domain.vo.SysUserVo" id="SysUserResult">
        <id property="userId" column="user_id"/>
    </resultMap>


    <sql id="selectUserVo">
        select u.user_id,
               u.user_balance,
               u.user_name,
               u.nick_name,
               u.user_type,
               u.email,
               u.avatar,
               u.wx_avatar,
               u.phone_number,
               u.password,
               u.sex,
               u.status,
               u.del_flag,
               u.login_ip,
               u.login_date,
               u.create_time,
               u.remark
        from sys_user u

    </sql>

    <update id="updateXcxUser">
        update sys_user
        set nick_name = #{nickName},
            wx_avatar = #{wxAvatar}
        WHERE user_id = #{userId}
    </update>

    <select id="selectPageUserList" resultMap="SysUserResult">
        select u.user_id,
               u.nick_name,
               u.user_name,
               u.email,
               u.avatar,
               u.phone_number,
               u.sex,
               u.user_balance,
               u.domain_name,
               u.status,
               u.del_flag,
               u.login_ip,
               u.login_date,
               u.create_time,
               u.remark
        from sys_user u
            ${ew.getCustomSqlSegment}
    </select>

    <select id="selectUserList" resultMap="SysUserResult">
        select u.user_id,
               u.nick_name,
               u.user_name,
               u.email,
               u.avatar,
               u.phone_number,
               u.sex,
               u.user_balance,
               u.status,
               u.del_flag,
               u.login_ip,
               u.login_date,
               u.create_time,
               u.remark
        from sys_user u
            ${ew.getCustomSqlSegment}
    </select>

    <select id="selectAllocatedList" resultMap="SysUserResult">
        select distinct u.user_id,
                        u.user_name,
                        u.nick_name,
                        u.email,
                        u.phone_number,
                        u.status,
                        u.create_time
        from sys_user u
            ${ew.getCustomSqlSegment}
    </select>

    <select id="selectUnallocatedList" resultMap="SysUserResult">
        select distinct u.user_id,
                        u.user_name,
                        u.nick_name,
                        u.email,
                        u.phone_number,
                        u.status,
                        u.create_time
        from sys_user u
            ${ew.getCustomSqlSegment}
    </select>

    <select id="selectUserByUserName" parameterType="String" resultMap="SysUserResult">
        <include refid="selectUserVo"/>
        where u.del_flag = '0' and u.user_name = #{userName}
    </select>

    <select id="selectUserByOpenId" parameterType="String" resultMap="SysUserResult">
        <include refid="selectUserVo"/>
        where u.del_flag = '0' and u.open_id = #{openId}
    </select>

    <select id="selectUserByPhonenumber" parameterType="String" resultMap="SysUserResult">
        <include refid="selectUserVo"/>
        where u.del_flag = '0' and u.phonenumber = #{phonenumber}
    </select>

    <select id="selectUserByEmail" parameterType="String" resultMap="SysUserResult">
        <include refid="selectUserVo"/>
        where u.del_flag = '0' and u.email = #{email}
    </select>

    <select id="selectTenantUserByUserName" parameterType="String" resultMap="SysUserResult">
        <include refid="selectUserVo"/>
        where u.del_flag = '0' and u.user_name = #{userName} and u.tenant_id = #{tenantId}
    </select>

    <select id="selectTenantUserByPhonenumber" parameterType="String" resultMap="SysUserResult">
        <include refid="selectUserVo"/>
        where u.del_flag = '0' and u.phonenumber = #{phonenumber} and u.tenant_id = #{tenantId}
    </select>

    <select id="selectTenantUserByEmail" parameterType="String" resultMap="SysUserResult">
        <include refid="selectUserVo"/>
        where u.del_flag = '0' and u.email = #{email} and u.tenant_id = #{tenantId}
    </select>

    <select id="selectUserById" parameterType="Long" resultMap="SysUserResult">
        <include refid="selectUserVo"/>
        where u.del_flag = '0' and u.user_id = #{userId}
    </select>


</mapper>
